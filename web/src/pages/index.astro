<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>Noughts & Crosses</title>
    </head>
    <body>
        <h1>Astro with Vercel</h1>
        <div>
            <a href="/signup">Signup</a>
            <a href="/login">Login</a>
        </div>

        <p>This is triggering a masked url</p>
        <label>
            <input id="input-masked" type="text" />
            <output id="output-masked"></output>
        </label>
        <br />
        <label>
            <input id="input" type="text" />
            <output id="output"></output>
        </label>
    </body>
</html>

<script>
    import { Ping } from "../lib/agent";
    import { isAppError } from "../lib/errors";

    const maskedInput =
        document.querySelector<HTMLInputElement>("#input-masked")!;
    const maskedOutput =
        document.querySelector<HTMLOutputElement>("#output-masked")!;

    maskedInput.addEventListener("input", async (e) => {
        const { value } = e.currentTarget as HTMLInputElement;
        if (!value) {
            maskedOutput.textContent = `masked: The sum of "${value}": ${0}`;
            return;
        }

        const data = await Ping.hello(value);
        if (isAppError(data)) {
            console.error(data.error);
            return;
        }

        maskedOutput.textContent = `masked: The sum of "${value}": ${data.sum}`;
    });

    // Unmasked input
    const input = document.querySelector<HTMLInputElement>("#input")!;
    const output = document.querySelector<HTMLOutputElement>("#output")!;

    input.addEventListener("input", async (e) => {
        const { value } = e.currentTarget as HTMLInputElement;
        if (!value) {
            output.textContent = `unmasked: The sum of "${value}": ${0}`;
            return;
        }

        const data = await Ping.helloUnmasked(value);
        if (isAppError(data)) {
            console.error(data.error);
            return;
        }

        output.textContent = `unmasked: The sum of "${value}": ${data.sum}`;
    });
</script>
